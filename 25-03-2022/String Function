38) SUBSTRING()

select substring('Ravi Vaghela',6);
+-----------------------------+
| substring('Ravi Vaghela',6) |
+-----------------------------+
| Vaghela                     |
+-----------------------------+

select substring('Mr.Ravi Vaghela',4,4);
+----------------------------------+
| substring('Mr.Ravi Vaghela',4,4) |
+----------------------------------+
| Ravi                             |
+----------------------------------+

select substring('Mr.Ravi Vaghela',-7);
+---------------------------------+
| substring('Mr.Ravi Vaghela',-7) |
+---------------------------------+
| Vaghela                         |
+---------------------------------+

select substring('Mr.Ravi Vaghela',-7,3);
+-----------------------------------+
| substring('Mr.Ravi Vaghela',-7,3) |
+-----------------------------------+
| Vag                               |
+-----------------------------------+

select substring('Mr.Ravi Vaghela',-7,4);
+-----------------------------------+
| substring('Mr.Ravi Vaghela',-7,4) |
+-----------------------------------+
| Vagh                              |
+-----------------------------------+

select substring('Mr.Ravi Vaghela' from -4 for 2);
+--------------------------------------------+
| substring('Mr.Ravi Vaghela' from -4 for 2) |
+--------------------------------------------+
| he                                         |
+--------------------------------------------+

select substring('Mr.Ravi Vaghela' from -7 for 2);
+--------------------------------------------+
| substring('Mr.Ravi Vaghela' from -7 for 2) |
+--------------------------------------------+
| Va                                         |
+--------------------------------------------+

==========================================================

39) SUBSTRING_INDEX()

select substring_index('www.mysql.com', '.', 2);
+------------------------------------------+
| substring_index('www.mysql.com', '.', 2) |
+------------------------------------------+
| www.mysql                                |
+------------------------------------------+

select substring_index('www.mysql.com', '.',-2);
+------------------------------------------+
| substring_index('www.mysql.com', '.',-2) |
+------------------------------------------+
| mysql.com                                |
+------------------------------------------+

select substring_index('Ravi Vaghela', ' ',-2);
+-----------------------------------------+
| substring_index('Ravi Vaghela', ' ',-2) |
+-----------------------------------------+
| Ravi Vaghela                            |
+-----------------------------------------+

select substring_index('Ravi Vaghela', ' ',-1);
+-----------------------------------------+
| substring_index('Ravi Vaghela', ' ',-1) |
+-----------------------------------------+
| Vaghela                                 |
+-----------------------------------------+

select substring_index('Ravi Vaghela', ' ',1);
+----------------------------------------+
| substring_index('Ravi Vaghela', ' ',1) |
+----------------------------------------+
| Ravi                                   |
+----------------------------------------+

====================================================

40) TRIM()

select trim(' Rv ') as TRIM;
+------+
| TRIM |
+------+
| Rv   |
+------+

select trim(leading 'Mr.' from 'Mr.Ravi Vaghela Mr.') as TRIM;
+------------------+
| TRIM             |
+------------------+
| Ravi Vaghela Mr. |
+------------------+

select trim(both 'Mr.' from 'Mr.Ravi Vaghela Mr.') as TRIM;
+---------------+
| TRIM          |
+---------------+
| Ravi Vaghela  |
+---------------+

select trim(trailing 'Mr.' from 'Mr.Ravi Vaghela Mr.') as TRIM;
+------------------+
| TRIM             |
+------------------+
| Mr.Ravi Vaghela  |
+------------------+

===================================================================

