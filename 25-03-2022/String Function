42)  WEIGHT_STRING()

select hex(weight_string('ab' as char(4)));
+-------------------------------------+
| hex(weight_string('ab' as char(4))) |
+-------------------------------------+
| 41422020                            |
+-------------------------------------+

select hex(weight_string('AB' as char(4)));
+-------------------------------------+
| hex(weight_string('AB' as char(4))) |
+-------------------------------------+
| 41422020                            |
+-------------------------------------+

select hex(weight_string('ABC' as char(4)));
+--------------------------------------+
| hex(weight_string('ABC' as char(4))) |
+--------------------------------------+
| 41424320                             |
+--------------------------------------+

