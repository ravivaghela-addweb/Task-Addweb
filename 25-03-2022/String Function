22) LPAD()

select lpad(' Vaghela', 12, 'Ravi');
+------------------------------+
| lpad(' Vaghela', 12, 'Ravi') |
+------------------------------+
| Ravi Vaghela                 |
+------------------------------+

select lpad(' Vaghela', 2, 'Ravi');
+-----------------------------+
| lpad(' Vaghela', 2, 'Ravi') |
+-----------------------------+
|  V                          |
+-----------------------------+


=====================================================

23) LTRIM()

select ltrim('   Ravi Vaghela') as LTRIM;
+--------------+
| LTRIM        |
+--------------+
| Ravi Vaghela |
+--------------+



=====================================================

24) MAKE_SET()

select make_set(1 | 1, 'hello', 'nice', 'world');
+-------------------------------------------+
| make_set(1 | 1, 'hello', 'nice', 'world') |
+-------------------------------------------+
| hello                                     |
+-------------------------------------------+

select make_set(2 | 3, 'hello', 'nice', 'world');
+-------------------------------------------+
| make_set(2 | 3, 'hello', 'nice', 'world') |
+-------------------------------------------+
| hello,nice                                |
+-------------------------------------------+

select make_set(2 | 4, 'hello', 'nice', 'world');
+-------------------------------------------+
| make_set(2 | 4, 'hello', 'nice', 'world') |
+-------------------------------------------+
| nice,world                                |
+-------------------------------------------+

select make_set(1 | 4, 'hello', 'nice', 'world');
+-------------------------------------------+
| make_set(1 | 4, 'hello', 'nice', 'world') |
+-------------------------------------------+
| hello,world                               |
+-------------------------------------------+
1 row in set (0.000 sec)

select make_set(1 | 4, 'hello', 'nice', null, 'world');
+-------------------------------------------------+
| make_set(1 | 4, 'hello', 'nice', null, 'world') |
+-------------------------------------------------+
| hello                                           |
+-------------------------------------------------+

select make_set(0, 'a', 'b', 'c', 'd');
+---------------------------------+
| make_set(0, 'a', 'b', 'c', 'd') |
+---------------------------------+
|                                 |
+---------------------------------+

select make_set(2, 'a', 'b', 'c', 'd');
+---------------------------------+
| make_set(2, 'a', 'b', 'c', 'd') |
+---------------------------------+
| b                               |
+---------------------------------+

==================================================

25) MID()

select mid('Ravi', 2, 4);
+-------------------+
| mid('Ravi', 2, 4) |
+-------------------+
| avi               |
+-------------------+

select mid('Ravi', 3, 4);
+-------------------+
| mid('Ravi', 3, 4) |
+-------------------+
| vi                |
+-------------------+

select mid('Ravi', 2, 2);
+-------------------+
| mid('Ravi', 2, 2) |
+-------------------+
| av                |
+-------------------+

select mid('Ravi', 2, 3);
+-------------------+
| mid('Ravi', 2, 3) |
+-------------------+
| avi               |
+-------------------+
1 row in set (0.000 sec)

select mid('Ravi', 2, 1);
+-------------------+
| mid('Ravi', 2, 1) |
+-------------------+
| a                 |
+-------------------+

select mid('Ravi', 1, 1);
+-------------------+
| mid('Ravi', 1, 1) |
+-------------------+
| R                 |
+-------------------+

===================================================

