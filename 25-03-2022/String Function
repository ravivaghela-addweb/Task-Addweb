| x'4D7953514C' |
+---------------+
| MySQL         |
+---------------+

select unhex(hex('MySQL'));
+---------------------+
| unhex(hex('MySQL')) |
+---------------------+
| MySQL               |
+---------------------+

select unhex('MySQL');
+---------------------+
| unhex('MySQL') |
+---------------------+
| NULL                |
+---------------------+

